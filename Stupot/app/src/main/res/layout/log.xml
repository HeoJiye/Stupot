<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/log_logo"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/log_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/notosans_bold"
            android:maxWidth="240dp"
            android:minWidth="240dp"
            android:text="[장소 이름]"
            android:textAlignment="center"
            android:textColor="@color/text_0"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/log_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_regular"
            android:text="이 곳에서 공부한 시간: NN:NN:NN"
            android:textAlignment="textStart"
            android:textColor="@color/text_0"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/log_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_regular"
            android:text="이 곳에서 공부한 횟수: NN"
            android:textAlignment="textStart"
            android:textColor="@color/text_0"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/timer_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:fontFamily="@font/notosans_light"
            android:text="화면을 클릭하면 홈으로 돌아갑니다"
            android:textAlignment="center"
            android:textColor="@color/text_0"
            android:textSize="17dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>