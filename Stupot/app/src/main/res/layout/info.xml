<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_1"
    android:paddingTop="-5dp"
    android:paddingBottom="-5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/option"
        android:layout_width="match_parent"
        android:layout_height="432dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/info_log_button"
            android:layout_width="410dp"
            android:layout_height="67dp"
            android:layout_marginBottom="-7.5dp"
            android:elevation="18dp"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/log_button" />

        <TextView
            android:id="@+id/info_log_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="19dp"
            android:fontFamily="@font/notosans_bold"
            android:text="이 곳에서 NNN시간동안 공부했어요!"
            android:textColor="@color/text_0"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/info_log_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="366dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="19dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/imageView">

                <TextView
                    android:id="@+id/info_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans_bold"
                    android:text="[장소 이름]"
                    android:textColor="@color/text_3"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="342dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/info_image"
                        android:layout_width="128dp"
                        android:layout_height="128dp"
                        android:background="@color/text_1"
                        app:srcCompat="@drawable/logo" />

                    <LinearLayout
                        android:layout_width="199dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/info_type"
                            android:layout_width="match_parent"
                            android:layout_height="37dp"
                            android:fontFamily="@font/notosans_bold"
                            android:maxWidth="200dp"
                            android:text="[장소 종류]"
                            android:textColor="@color/point_4"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/info_address"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosans_regular"
                            android:maxWidth="200dp"
                            android:minWidth="180dp"
                            android:text="평천로 152번길 152번길 152번길"
                            android:textColor="@color/text_2"
                            android:textSize="14dp" />

                        <ImageView
                            android:id="@+id/info_button"
                            android:layout_width="142dp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/info_button" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/timer_button"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    app:srcCompat="@drawable/timer_button" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/option_bg" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>